{
  "name": "qlue-sparql-editor",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/utils",
    "packages/yasqe",
    "packages/yasr",
    "packages/yasgui",
    "packages/demo"
  ],
  "scripts": {
    "dev": "vite",
    "dev:build": "vite build",
    "dev:preview": "vite preview",
    "all:build": "BUILD_PACKAGE=yasgui-utils vite build && BUILD_PACKAGE=yasqe vite build && BUILD_PACKAGE=yasr vite build && BUILD_PACKAGE=yasgui vite build",
    "build": "npm run build --workspaces",
    "utils:build": "npm run build -w packages/utils",
    "yasqe:build": "npm run build -w packages/yasqe",
    "yasr:build": "npm run build -w packages/yasr",
    "yasgui:build": "npm run build -w packages/yasgui",
    "demo:build": "npm run build -w packages/demo",
    "demo:dev": "npm run dev -w packages/demo",
    "demo:preview": "npm run preview -w packages/demo",
    "eslint": "eslint \"packages/**/*.{ts,tsx,html,json}\" --fix",
    "fmt": "prettier --write . --ignore-path .gitignore && eslint \"packages/**/*.{ts,tsx,html,json}\" --fix",
    "lint": "prettier --check . --ignore-path .gitignore && eslint \"packages/**/*.{ts,tsx,html,json}\"",
    "upgrade": "npx npm-check-updates -u && npm run upgrade --workspaces && npm i",
    "util:lint": "ESLINT_STRICT=true eslint --ext .tsx --ext .ts $(ls -d ./packages/*/* | grep -E '(src|test|grammar)$')",
    "util:buildWebpackConfig": "tsc -p tsconfig-webpack.json",
    "util:validateTs": "tsc -p ./tsconfig-validate.json --noEmit",
    "util:prettify": "prettier --parser typescript --write $(find ./packages/*/src -regex '.*\\.tsx?$') && prettier --parser css --write $(find ./packages/*/src -regex '.*\\.?scss$')",
    "util:analyzeBundle": "vite-bundle-analyzer build",
    "util:bundlesize": "bundlesize",
    "pretest": "[ -z \"$(ls -A ./build 2> /dev/null)\" ] && echo Run \\\"npm run build\\\" before running a test && exit 1 || true",
    "test:dev": "TEST_ON_DEV_BUILD=1 npm run test",
    "test": "npm run puppeteer-test && npm run unit-test",
    "test-live": "TEST_ON_DEV_BUILD=1 npm run test",
    "unit-test": "tsc -p ./tsconfig-test.json && mocha $(find ./build/test -name '*-test.js') --require source-map-support/register || true",
    "puppeteer-test": "tsc -p ./tsconfig-test.json && mocha --timeout 30000 ./build/test/test/run.js --require source-map-support/register",
    "prerelease": "npm run build && npm run test",
    "release": "changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/chai": "^4.3.11",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.15",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.5.4",
    "@types/node-static": "^0.7.11",
    "autoprefixer": "^10.4.16",
    "bundlesize": "^0.18.1",
    "chai": "^4.3.10",
    "css-loader": "^6.8.1",
    "fs-extra": "^11.2.0",
    "mocha": "^10.2.0",
    "node-static": "^0.7.11",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.1",
    "eslint-plugin-lodash": "^7.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^2.0.5",
    "puppeteer": "^22.6.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.5",
    "vite-bundle-analyzer": "^1.0.0",
    "vite-plugin-top-level-await": "^1.5.0",
    "vite-plugin-wasm": "^3.4.1"
  },
  "prettier": {
    "useTabs": false,
    "printWidth": 120
  },
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --parser typescript --write"
    ],
    "*.js": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --parser css --write"
    ],
    "*.scss": [
      "prettier --parser scss --write"
    ]
  },
  "bundlesize": [
    {
      "compression": "none",
      "path": "build/yasgui.min.js",
      "maxSize": "1.10 mb"
    },
    {
      "compression": "none",
      "path": "build/yasr.min.js",
      "maxSize": "660 kB"
    },
    {
      "compression": "none",
      "path": "build/yasqe.min.js",
      "maxSize": "495 kB"
    }
  ],
  "overrides": {
    "brotli-size": "4.0.0"
  }
}
